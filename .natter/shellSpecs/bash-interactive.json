{
  // Specification for the bash shell
  "name": "bash",
  "pathKind": "posix",
  "supportedInteractions": [
    "command",
    "terminal"
  ],
  "escapes": [
    "\\"
  ],
  "scope": [
    {
      "opener": "{",
      "closer": "}",
      "isRegionComment": false
    },
    {
      "opener": "(",
      "closer": ")",
      "isRegionComment": false
    },
    {
      "opener": "[",
      "closer": "]",
      "isRegionComment": false
    }
  ],
  "stringScope": [
    {
      "quote": "'",
      "containsEscape": true
    },
    {
      "quote": "\"",
      "containsEscape": true
    }
  ],
  "lineComments": [
    "#"
  ],
  "lineContinuations": [
    "\\"
  ],
  "delimiter": ";",
  "lineEnding": "\n",
  "exitCodeVariable": "$?",
  "exitCodeOK": "0",
  "directoryCommands": {
    "getCurrent": "pwd",
    "changeCurrent": "cd \"${directory}\"",
    "list": "ls -lA \"${directory}\"",
    "getUser": "whoami"
  },
  "sourceCommand": "source \"${path}\"",
  "paren": "$(${command})",
  "echoCommands": {
    "toStdout": "echo \"${message}\"",
    "toStderr": "echo \"${message}\" >&2"
  },
  "promptCommands": {
    "get": "echo $PS1",
    "set": "PS1=\"${prompt}\"",
    "setContinuation": "PS2=\"${prompt}\""
  },
  "boundaryDetectorCharSet": {
    "boundary": "@#",
    "placer": "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
  },
  "defaultExt": ".sh"
}
